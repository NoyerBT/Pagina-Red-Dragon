/* Brackets Main Container */
.brackets-main {
  padding: 2rem 1rem;
  min-height: 80vh;
  overflow-x: auto;
}

.brackets-header {
  text-align: center;
  margin-bottom: 2rem;
  padding: 1.5rem 1rem;
}

.brackets-header h1 {
  font-size: 2.5rem;
  color: #d4af37;
  text-shadow: 0 0 20px rgba(212, 175, 55, 0.6);
  margin-bottom: 0.5rem;
}

.brackets-subtitle {
  font-size: 1.1rem;
  color: #d0d0d0;
  font-family: 'Segoe UI', 'Roboto', 'Poppins', sans-serif;
}

/* Tournament Container */
.tournament-container {
  background: rgba(20, 20, 20, 0.9);
  border: 2px solid #d4af37;
  border-radius: 15px;
  padding: 2rem;
  overflow-x: auto;
  width: 100%;
}

/* Bracket Wrapper */
.bracket-wrapper {
  margin-bottom: 3rem;
}

.bracket-section-title {
  font-size: 1.8rem;
  color: #d4af37;
  text-align: center;
  margin-bottom: 1.5rem;
  padding: 0.8rem;
  background: rgba(212, 175, 55, 0.1);
  border-radius: 8px;
  border: 2px solid #d4af37;
  letter-spacing: 2px;
}

.bracket-description {
  text-align: center;
  color: #b0b0b0;
  font-size: 1rem;
  margin-bottom: 1.5rem;
  font-style: italic;
  padding: 0.5rem;
}

.losers-title {
  color: #e74c3c;
  border-color: #e74c3c;
  background: rgba(231, 76, 60, 0.1);
}

.grand-final-title {
  color: #f39c12;
  border-color: #f39c12;
  background: rgba(243, 156, 18, 0.1);
  font-size: 2rem;
}

/* Bracket Layout - Horizontal */
.bracket {
  display: flex;
  gap: 120px;
  /* Increased for better visual separation */
  justify-content: flex-start;
  padding: 2rem 1rem;
  overflow-x: visible;
  min-width: min-content;
  width: max-content;
}

/* Scrollbar styling */
.tournament-container::-webkit-scrollbar {
  height: 12px;
}

.tournament-container::-webkit-scrollbar-track {
  background: rgba(40, 40, 40, 0.8);
  border-radius: 6px;
}

.tournament-container::-webkit-scrollbar-thumb {
  background: #d4af37;
  border-radius: 6px;
}

.tournament-container::-webkit-scrollbar-thumb:hover {
  background: #e8c952;
}

/* Round Column */
.round {
  display: flex;
  flex-direction: column;
  gap: 25px;
  min-width: 250px;
  position: relative;
}

/* Ajuste especial para rondas con muchos matches */
.round:first-child {
  gap: 20px;
}

.round-label {
  text-align: center;
  font-size: 1rem;
  color: #d4af37;
  font-weight: bold;
  margin-bottom: 20px;
  padding: 0.5rem;
  background: rgba(212, 175, 55, 0.15);
  border-radius: 5px;
  border: 1px solid #d4af37;
}

/* Match Container */
.match {
  display: flex;
  flex-direction: column;
  gap: 2px;
  position: relative;
  background: rgba(40, 40, 40, 0.8);
  border: 2px solid #555;
  border-radius: 8px;
  padding: 0;
  overflow: hidden;
  transition: all 0.3s ease;
}

.match:hover {
  border-color: #d4af37;
  box-shadow: 0 0 15px rgba(212, 175, 55, 0.4);
}

.match-final {
  border-color: #d4af37;
  box-shadow: 0 0 20px rgba(212, 175, 55, 0.3);
}

/* Team Slot */
.team-slot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background: rgba(50, 50, 50, 0.9);
  transition: all 0.3s ease;
  position: relative;
}

.team-slot:hover {
  background: rgba(60, 60, 60, 0.95);
}

.team-slot:first-child {
  border-bottom: 1px solid #333;
}

.team-name {
  font-size: 1rem;
  color: #e0e0e0;
  font-weight: 500;
  font-family: 'Segoe UI', 'Roboto', 'Poppins', sans-serif;
  flex: 1;
}

.score {
  font-size: 1.2rem;
  font-weight: bold;
  color: #d4af37;
  margin-left: 15px;
  min-width: 35px;
  text-align: center;
  transition: all 0.3s ease;
}

/* Puntajes con colores - Ganador en Azul, Perdedor en Rojo */

.match-grand-final {
  max-width: 400px;
  margin: 0 auto;
  border: 3px solid #f39c12;
  box-shadow: 0 0 30px rgba(243, 156, 18, 0.5);
  background: rgba(243, 156, 18, 0.08);
}

.match-grand-final .team-slot {
  background: rgba(60, 60, 60, 0.95);
  padding: 16px 20px;
}

.match-grand-final .team-name {
  font-size: 1.2rem;
  font-weight: 600;
}

.match-grand-final .score {
  font-size: 1.5rem;
}

.grand-final-info {
  text-align: center;
  color: #f39c12;
  font-size: 1rem;
  margin-top: 1rem;
  font-weight: 600;
  letter-spacing: 1px;
}

/* Back Button */
.back-button-container {
  text-align: center;
  margin: 3rem 0;
}

.btn-back {
  display: inline-block;
  padding: 1rem 2.5rem;
  background: linear-gradient(135deg, #d4af37, #c09b2d);
  color: #000;
  text-decoration: none;
  border-radius: 8px;
  font-size: 1.1rem;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
}

.btn-back:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(212, 175, 55, 0.5);
  background: linear-gradient(135deg, #e8c952, #d4af37);
}

/* Button Brackets in torneo.php */
.brackets-button-container {
  text-align: center;
  margin-top: 2rem;
}

.btn-brackets {
  display: inline-block;
  padding: 1.2rem 2.5rem;
  background: linear-gradient(135deg, #d4af37, #c09b2d);
  color: #000;
  text-decoration: none;
  border-radius: 10px;
  font-size: 1.2rem;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
  font-family: 'Segoe UI', 'Roboto', 'Poppins', sans-serif;
}

.btn-brackets:hover {
  transform: translateY(-3px) scale(1.02);
  box-shadow: 0 6px 25px rgba(212, 175, 55, 0.5);
  background: linear-gradient(135deg, #e8c952, #d4af37);
}

.btn-brackets span {
  font-size: 1.4rem;
  margin-right: 0.5rem;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .tournament-container {
    padding: 1.5rem;
  }

  .bracket {
    gap: 60px;
  }

  .round {
    min-width: 220px;
  }
}

@media (max-width: 768px) {
  .brackets-header h1 {
    font-size: 2rem;
  }

  .brackets-subtitle {
    font-size: 1rem;
  }

  .tournament-container {
    padding: 1rem;
  }

  .bracket-section-title {
    font-size: 1.4rem;
  }

  .bracket {
    gap: 50px;
    padding: 1rem 0.5rem;
  }

  .round {
    min-width: 200px;
    gap: 30px;
  }

  .team-name {
    font-size: 0.9rem;
  }

  .score {
    font-size: 1rem;
  }

  .match-grand-final {
    max-width: 100%;
  }

  .btn-brackets,
  .btn-back {
    padding: 1rem 1.5rem;
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .brackets-header h1 {
    font-size: 1.5rem;
  }

  .brackets-subtitle {
    font-size: 0.9rem;
  }

  .bracket-section-title {
    font-size: 1.2rem;
    padding: 0.5rem;
  }

  .bracket {
    gap: 40px;
  }

  .round {
    min-width: 180px;
    gap: 25px;
  }

  .team-slot {
    padding: 10px 12px;
  }

  .team-name {
    font-size: 0.85rem;
  }

  .score {
    font-size: 0.95rem;
  }

  .round-label {
    font-size: 0.85rem;
  }

  .btn-brackets,
  .btn-back {
    padding: 0.8rem 1.2rem;
    font-size: 0.9rem;
  }
}